<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="530.0" prefWidth="736.0" stylesheets="@../css/ChatDesign.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jtaodyssey.namespace.ui.controllers.ProfileEdit">
   <children>
      <Pane prefHeight="144.0" prefWidth="736.0" style="-fx-background-color: #222222;">
         <children>
            <Circle fx:id="profilePictureCircle" fill="WHITE" layoutX="113.0" layoutY="144.0" radius="85.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="4.0" />
            <Label fx:id="usernameLabel" layoutX="264.0" layoutY="72.0" text="Username">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <JFXTextField fx:id="changeAliasField" layoutX="266.0" layoutY="103.0" prefHeight="27.0" prefWidth="204.0" promptText="Enter Alias..." />
         </children>
      </Pane>
      <JFXTextField fx:id="changeFirstNameField" layoutX="266.0" layoutY="166.0" prefHeight="27.0" prefWidth="204.0" promptText="Enter First Name..." />
      <JFXTextField fx:id="changeLastNameField" layoutX="266.0" layoutY="213.0" prefHeight="27.0" prefWidth="204.0" promptText="Enter Last Name..." />
      <JFXButton fx:id="changeProfilePictureButton" buttonType="RAISED" layoutX="46.0" layoutY="240.0" onMouseClicked="#onClickChangeProfilePicture" text="Change Profile Picture" />
      <JFXButton fx:id="changeUsernameButton" buttonType="RAISED" layoutX="55.0" layoutY="298.0" onMouseClicked="#onClickChangeUsername" text="Change Username" />
      <JFXButton fx:id="changePasswordButton" buttonType="RAISED" layoutX="56.0" layoutY="361.0" onMouseClicked="#onClickChangePassword" text="Change Password" />
      <JFXButton fx:id="returnToProfileButton" layoutX="51.0" layoutY="427.0" onMouseClicked="#onClickReturnToProfile" prefHeight="27.0" prefWidth="127.0" text="Return To Profile" />
      <JFXButton fx:id="saveChangesButton" layoutX="266.0" layoutY="298.0" onMouseClicked="#onClickSaveChanges" text="Save Changes" />
   </children>
</AnchorPane>
